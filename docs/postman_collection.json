{
  "info": {
    "name": "Auth API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Signup",
      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" } ],
        "url": { "raw": "{{BASE_URL}}/api/auth/signup", "host": ["{{BASE_URL}}"], "path": ["api","auth","signup"] },
        "body": { "mode": "raw", "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"P@ssw0rd!\"\n}" }
      }
    },
    {
      "name": "Verify",
      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" } ],
        "url": { "raw": "{{BASE_URL}}/api/auth/verify", "host": ["{{BASE_URL}}"], "path": ["api","auth","verify"] },
        "body": { "mode": "raw", "raw": "{\n  \"email\": \"user@example.com\",\n  \"otp\": \"123456\"\n}" }
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" } ],
        "url": { "raw": "{{BASE_URL}}/api/auth/login", "host": ["{{BASE_URL}}"], "path": ["api","auth","login"] },
        "body": { "mode": "raw", "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"P@ssw0rd!\"\n}" }
      }
    },
    {
      "name": "Resend OTP",
      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" } ],
        "url": { "raw": "{{BASE_URL}}/api/auth/resend-otp", "host": ["{{BASE_URL}}"], "path": ["api","auth","resend-otp"] },
        "body": { "mode": "raw", "raw": "{\n  \"email\": \"user@example.com\"\n}" }
      }
    }
  ],
  "variable": [
    { "key": "BASE_URL", "value": "http://localhost:5000" }
  ]
}
